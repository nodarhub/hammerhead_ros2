<?xml version="1.0" encoding="UTF-8" ?>
<dds xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
    <profiles>
        <transport_descriptors>
            <transport_descriptor>
                <transport_id>udp_transport</transport_id>
                <type>UDPv4</type>
                <sendBufferSize>8388608</sendBufferSize>    <!-- 8 MB -->
                <receiveBufferSize>8388608</receiveBufferSize> <!-- 8 MB -->
            </transport_descriptor>
        </transport_descriptors>
        <participant profile_name="participant_udp" is_default_profile="true">
            <rtps>
                <useBuiltinTransports>false</useBuiltinTransports>
                <userTransports>
                    <transport_id>udp_transport</transport_id>
                </userTransports>
            </rtps>
        </participant>
    </profiles>
</dds>
